					      "SubnetId": {
							"Ref": "ESInstanceSN1"
						},
					      "GroupSet": [{
							"Ref": "SG1id"
						}]
				}],
				"IamInstanceProfile": {
					"Ref": "ESInstanceProfile"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
