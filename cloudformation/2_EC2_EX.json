{
	"Parameters": {
		"QualixSN": {
			"Type": "String"
		},
		"ESInstanceSN": {
			"Type": "String"
		},
		"QualiXInstanceProfile": {
			"Type": "String"
		},
		"ESInstanceProfile": {
			"Type": "String"
		},
		"SG2id": {
			"Type": "String"
		},
		"SG1id": {
			"Type": "String"
		},
		"ESAMI": {
			"Type": "String"
		},
		"QualixAMI": {
			"Type": "String"
		},
		"KeyPair": {
			"Type": "String"
		},
		"ESInstance2Profile": {
			"Type": "String"
		},
		"ServerIP": {
			"Type": "String"
		},
		"ZUsername": {
			"Type": "String"
		},
		"ZPassword": {
			"Type": "String"
		},
		"ExecutionServerBinaryLocation": {
			"Type": "String",
		}
	},
	"Resources": {
		"QualixInstance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"InstanceType": "c3.xlarge",
				"IamInstanceProfile": {
					"Ref": "QualiXInstanceProfile"
				},
				"SubnetId": {
					"Ref": "QualixSN"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
				"Tags": [{
					"Key": "Name",
					"Value": "QualiX"
				},
				{
					"Key": "CreateBy",
					"Value": "CloudShell"
				},
				{
					"Key": "Role",
					"Value": "Management"
				}],
				"ImageId": {
					"Ref": "QualixAMI"
				},
				"SecurityGroupIds": [{
					"Ref": "SG1id"
				},
				{
					"Ref": "SG2id"
				}]
			}
		},
		"ESInstance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"IamInstanceProfile": {
					"Ref": "ESInstanceProfile"
				},
				"SubnetId": {
					"Ref": "ESInstanceSN"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
				"Tags": [{
					"Key": "Name",
					"Value": "es-shells"
				},
				{
					"Key": "CreateBy",
					"Value": "CloudShell"
				},
				{
					"Key": "Role",
					"Value": "Management"
				}],
				"ImageId": {
					"Ref": "ESAMI"
				},
				"InstanceType": "c3.xlarge",
				"SecurityGroupIds": [{
					"Ref": "SG1id"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["",
						["#!/bin/bash -xe\n",
						"/bin/echo \"",
						"#!/bin/bash\n",
						"mkdir -p /quali/execsrv\n",
						"groupadd execsrv\n",
						"usermod -a -G execsrv ec2-user\n",
						"chown -R root:execsrv /quali/execsrv\n",
						"chmod 777 /quali/execsrv\n",
						"wget -O /quali/execsrv/exec.tar ",
						{ "Ref" : "ExecutionServerBinaryLocation"},
						"\n",
						"tar -xvf /quali/execsrv/exec.tar -C /quali/execsrv\n",
						"mono /quali/execsrv/QsExecutionServerConsoleConfig.exe /s:",
						{
							"Ref": "ServerIP"
						},
						" /u:",
						{
							"Ref": "ZUsername"
						},
						" /p:",
						{
							"Ref": "ZPassword"
						},
						" /esn:ES-Shell-",
						{
							"Ref": "AWS::Region"
						},
						" /i:",
						"100 \" >> /quali/execsrv/cf_config_params.txt"]]
					}
				}
			}
		},
		"ESInstance2": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"IamInstanceProfile": {
					"Ref": "ESInstance2Profile"
				},
				"SubnetId": {
					"Ref": "ESInstanceSN"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
				"ImageId": {
					"Ref": "ESAMI"
				},
				"InstanceType": "c3.xlarge",
				"SecurityGroupIds": [{
					"Ref": "SG1id"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["",
						["#!/bin/bash -xe\n",
						"/bin/echo \"",
						"#!/bin/bash\n",
						"mkdir -p /quali/execsrv\n",
						"groupadd execsrv\n",
						"usermod -a -G execsrv ec2-user\n",
						"chown -R root:execsrv /quali/execsrv\n",
						"chmod 777 /quali/execsrv\n",
						"wget -O /quali/execsrv/exec.tar ",
						{ "Ref" : "ExecutionServerBinaryLocation"},
						"\n",
						"tar -xvf /quali/execsrv/exec.tar -C /quali/execsrv\n",
						"mono /quali/execsrv/QsExecutionServerConsoleConfig.exe /s:",
						{
							"Ref": "ServerIP"
						},
						" /u:",
						{
							"Ref": "ZUsername"
						},
						" /p:",
						{
							"Ref": "ZPassword"
						},
						" /esn:ES-Shell-",
						{
							"Ref": "AWS::Region"
						},
						" /i:",
						"100 \" >> /quali/execsrv/cf_config_params.txt"]]
					}
				},
				"Tags": [{
					"Key": "Name",
					"Value": "es-commands"
				},
				{
					"Key": "CreateBy",
					"Value": "CloudShell"
				},
				{
					"Key": "Role",
					"Value": "Management"
				}]
			}
		},
		"ESInstanceEIP": {
			"Type": "AWS::EC2::EIP",
			"Properties": {
				"InstanceId": {
					"Ref": "ESInstance"
				},
				"Domain": ""
			},
			"DependsOn": "ESInstance"
		},
		"ESInstance2EIP": {
			"Type": "AWS::EC2::EIP",
			"Properties": {
				"InstanceId": {
					"Ref": "ESInstance2"
				},
				"Domain": "vpc"
			},
			"DependsOn": "ESInstance2"
		},
		"QualixInstanceEIP": {
			"Type": "AWS::EC2::EIP",
			"Properties": {
				"InstanceId": {
					"Ref": "QualixInstance"
				},
				"Domain": "vpc"
			},
			"DependsOn": "QualixInstance"
		}
	},
	"Description": "EC2 instances - QualiX and ES",
	"Outputs": {
		"QualixInstanceEIP": {
			"Description": "Qualix Instance Elastic IP",
			"Value": {
				"Ref": "QualixInstanceEIP"
			}
		}
	}
